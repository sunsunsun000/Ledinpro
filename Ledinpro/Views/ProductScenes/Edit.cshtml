@model Ledinpro.Models.ProductScene

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="leftTopTitle">
    <p>编辑</p>
</div>

<hr />
<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-8">
        <form method="POST" enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2 col-lg-2 fieldTitle">
                        <label asp-for="Name" class="control-label"></label>
                    </div>
                    <div class="col-md-8 col-lg-8">
                        <input asp-for="Name" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2 col-lg-2 fieldTitle">
                        <label asp-for="Description" class="control-label"></label>
                    </div>
                    <div class="col-md-8 col-lg-8">
                        <input asp-for="Description" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2 col-lg-2 fieldTitle">
                        <label asp-for="PicturePath" class="control-label"></label>
                    </div>
                    <div class="col-md-8 col-lg-8">
                        <img src="@Model.PicturePath" class="imgThirtySize" />
                        <input type="hidden" asp-for="PicturePath" />
                        <input type="file" id="PicturePath" name="picture" class="form-control" />
                    </div>
                </div>                
                <span asp-validation-for="PicturePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2 col-lg-2 fieldTitle">
                        <label asp-for="MobilePicturePath" class="control-label"></label>
                    </div>
                    <div class="col-md-8 col-lg-8">
                        <img src="@Model.MobilePicturePath" class="imgThirtySize" />
                        <input type="hidden" asp-for="MobilePicturePath" />
                        <input type="file" id="MobilePicturePath" name="mobilePicture" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="MobilePicturePath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2 col-lg-2 fieldTitle">
                        <label asp-for="ProductApplicationScene" class="control-label"></label>
                    </div>
                    <div class="col-md-8 col-lg-8">
                        <img src="@Model.ProductApplicationScene" class="imgThirtySize" />
                        <input type="hidden" asp-for="ProductApplicationScene" />
                        <input type="file" id="ProductApplicationScene" name="backgroundPicture" class="form-control" />
                    </div>
                </div>
                <span asp-validation-for="ProductApplicationScene" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-2 col-lg-2 fieldTitle">
                        <label asp-for="Type" class="control-label"></label>
                    </div>
                    <div class="col-md-8 col-lg-8">
                        <select asp-for="Type" class="form-control" asp-items="@Html.GetEnumSelectList(typeof(ProductType))"></select>
                    </div>
                </div>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="保存" class="btn btn-primary" />
                <a class="btn btn-danger" asp-action="Index">放弃</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
