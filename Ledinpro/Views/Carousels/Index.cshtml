@model IEnumerable<Ledinpro.Models.Carousel>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PicturePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MobilePicturePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SortNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RelativeProductId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateUserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastEditUserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastEditDateTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PicturePath)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MobilePicturePath)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SortNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RelativeProductId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateUserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDateTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastEditUserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastEditDateTime)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
